<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E9EC"
    tools:context=".welcome">


    <Button
        android:id="@+id/animalbtn"
        android:layout_width="376dp"
        android:layout_height="140dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:foreground="@drawable/animal"
        android:text="."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/numbtn"
        android:layout_width="156dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="56dp"
        android:foreground="@drawable/num"
        android:text="."
        app:layout_constraintBottom_toTopOf="@+id/testbtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/alphabtn"
        android:layout_width="161dp"
        android:layout_height="198dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:foreground="@drawable/alph"
        android:text="."
        app:layout_constraintBottom_toTopOf="@+id/testbtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/testbtn"
        android:layout_width="331dp"
        android:layout_height="158dp"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="31dp"
        android:foreground="@drawable/test"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="Hello Little"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="55dp"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="ANIMALS"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/animalbtn"
        app:layout_constraintTop_toTopOf="@+id/animalbtn" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="44dp"
        android:text="Test"
        android:textSize="43sp"
        app:layout_constraintBottom_toBottomOf="@+id/testbtn"
        app:layout_constraintStart_toStartOf="@+id/testbtn" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Numbers"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/numbtn"
        app:layout_constraintTop_toBottomOf="@+id/numbtn" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Alphabets"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/alphabtn"
        app:layout_constraintTop_toBottomOf="@+id/alphabtn" />
</androidx.constraintlayout.widget.ConstraintLayout>